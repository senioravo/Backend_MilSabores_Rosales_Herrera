          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}:8083/api/carritos/usuario/{{user_id}}",
              "host": ["{{base_url}}"],
              "port": "8083",
              "path": ["api", "carritos", "usuario", "{{user_id}}"]
