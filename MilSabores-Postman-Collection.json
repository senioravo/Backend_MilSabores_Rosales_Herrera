            "body": {
              "mode": "raw",
              "raw": "{\n  \"telefono\": \"+56987654321\",\n  \"direccion\": \"Nueva Dirección 456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:8081/api/usuarios/{{user_id}}",
              "host": ["{{base_url}}"],
              "port": "8081",
              "path": ["api", "usuarios", "{{user_id}}"]
